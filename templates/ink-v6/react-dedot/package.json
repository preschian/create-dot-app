{
  "name": "react-dedot",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:contract": "pop build ./contract && cp ./contract/target/ink/flipper.json ./src/contracts/",
    "deploy:contract": "pop up ./contract --use-wallet --args false --url wss://testnet-passet-hub.polkadot.io",
    "generate:chain": "dedot chaintypes -w wss://testnet-passet-hub.polkadot.io -o ./src/generated",
    "generate:contract": "dedot typink -m ./src/contracts/flipper.json -o ./src/generated/contract",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix",
    "postinstall": "npm run generate:chain && npm run generate:contract"
  },
  "dependencies": {
    "@talismn/connect-wallets": "^1.2.8",
    "@xstate/store": "^3.11.2",
    "dedot": "^1.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@dedot/chaintypes": "^0.197.0",
    "@eslint-react/eslint-plugin": "^2.3.5",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/token-branded": "^1.2.32",
    "@iconify/tailwind4": "^1.1.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "daisyui": "^5.5.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.2"
  }
}
