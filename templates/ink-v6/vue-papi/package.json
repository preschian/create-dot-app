{
  "name": "dapp-vue-papi",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:contract": "pop build ./contract && cp ./contract/target/ink/flipper.json ./src/contracts/",
    "deploy:contract": "pop up ./contract --use-wallet --args false --url wss://testnet-passet-hub.polkadot.io",
    "generate:chain": "papi add -w wss://testnet-passet-hub.polkadot.io passet",
    "generate:contract": "papi ink add ./src/contracts/flipper.json",
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix",
    "postinstall": "papi && npm run generate:chain && npm run generate:contract"
  },
  "dependencies": {
    "@polkadot-api/sdk-ink": "^0.5.1",
    "@polkadot/util": "^13.5.7",
    "@talismn/connect-wallets": "^1.2.8",
    "polkadot-api": "^1.20.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/token-branded": "^1.2.29",
    "@iconify/tailwind4": "^1.0.6",
    "@tailwindcss/vite": "^4.1.15",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "daisyui": "^5.3.8",
    "eslint": "^9.38.0",
    "tailwindcss": "^4.1.15",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vue-tsc": "^3.0.9"
  }
}
