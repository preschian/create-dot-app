{
  "name": "create-dot-app",
  "type": "module",
  "version": "0.0.0",
  "description": "A CLI tool to bootstrap Polkadot-based decentralized applications with multiple frontend frameworks",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-dot-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepack": "tsdown",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@begit/core": "^0.3.3",
    "@clack/prompts": "^0.11.0",
    "fs-extra": "^11.3.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "tsdown": "latest",
    "typescript": "^5.8.3"
  }
}
