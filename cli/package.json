{
  "name": "create-dot-app",
  "type": "module",
  "version": "1.0.9",
  "description": "A CLI tool to bootstrap Polkadot-based decentralized applications with multiple frontend frameworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/preschian/create-dot-app.git",
    "directory": "cli"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-dot-app": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepack": "tsdown",
    "lint": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "fs-extra": "^11.3.2",
    "gitpick": "^4.12.3",
    "picocolors": "^1.1.1",
    "posthog-node": "^5.10.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "node-pty": "^1.0.0",
    "strip-ansi": "^7.1.2",
    "tsdown": "latest",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.1"
  }
}
